---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.astro';
import Card from '@/components/Card.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const categories = [...new Set(allPosts.map((post) => post.data.category))];
const allTags = [...new Set(allPosts.flatMap((post) => post.data.tags))];
---

<BaseLayout title="Blog | Portfolio" description="Articles about web development, tutorials, and experiences">
  <Hero
    title="Blog"
    subtitle="Articles & Tutorials"
    description="Sharing my knowledge, experiences, and learnings about web development, programming, and technology."
  />

  <section class="py-16">
    <div class="container grid grid-cols-1 md:grid-cols-[250px_1fr] gap-12 items-start">
      <aside class="md:sticky md:top-20">
        <div class="mb-8">
          <h3 class="text-sm font-semibold text-[var(--text-primary)] uppercase tracking-wide mb-4">Search</h3>
          <input 
            type="text" 
            id="search-input" 
            placeholder="Search articles..." 
            class="input-field text-sm"
            autocomplete="off"
          />
        </div>

        <div class="mb-8">
          <h3 class="text-sm font-semibold text-[var(--text-primary)] uppercase tracking-wide mb-4">Categories</h3>
          <div class="flex flex-col gap-2 md:flex-col">
            <button class="filter-btn active text-left w-full md:w-full" data-filter="all" data-type="category">
              All
            </button>
            {categories.map((category) => (
              <button class="filter-btn text-left w-full md:w-full" data-filter={category} data-type="category">
                {category}
              </button>
            ))}
          </div>
        </div>

        <div class="mb-8">
          <h3 class="text-sm font-semibold text-[var(--text-primary)] uppercase tracking-wide mb-4">Tags</h3>
          <div class="flex flex-wrap gap-2">
            {allTags.map((tag) => (
              <button class="tag cursor-pointer border-none filter-tag" data-filter={tag} data-type="tag">
                {tag}
              </button>
            ))}
          </div>
        </div>
      </aside>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8" id="posts-grid">
        {sortedPosts.map((post) => (
          <div 
            class="post-item transition-opacity duration-300" 
            data-category={post.data.category}
            data-tags={post.data.tags.join(',')}
            data-title={post.data.title.toLowerCase()}
            data-description={post.data.description.toLowerCase()}
          >
            <Card
              title={post.data.title}
              description={post.data.description}
              href={`/blog/${post.slug}`}
              image={post.data.image}
              date={post.data.pubDate}
              category={post.data.category}
              tags={post.data.tags}
              type="blog"
            />
          </div>
        ))}
      </div>

      <div id="no-results" class="hidden col-span-full text-center py-12 text-[var(--text-secondary)]">
        <p>No articles found with the selected filters.</p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .post-item.hidden {
    display: none;
  }
  
  .filter-tag.active {
    background-color: var(--color-primary-500);
    color: white;
  }

  @media (max-width: 768px) {
    aside {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
    }

    aside > div {
      flex: 1;
      min-width: 200px;
    }
  }
</style>

<script>
  const filterBtns = document.querySelectorAll('.filter-btn');
  const filterTags = document.querySelectorAll('.filter-tag');
  const postItems = document.querySelectorAll('.post-item');
  const noResults = document.getElementById('no-results');
  const searchInput = document.getElementById('search-input') as HTMLInputElement;

  let activeCategory = 'all';
  let activeTags: string[] = [];
  let searchQuery = '';

  function filterPosts() {
    let visibleCount = 0;

    postItems.forEach((item) => {
      const postCategory = item.getAttribute('data-category');
      const postTags = item.getAttribute('data-tags')?.split(',') || [];
      const postTitle = item.getAttribute('data-title') || '';
      const postDescription = item.getAttribute('data-description') || '';

      const matchesCategory = activeCategory === 'all' || postCategory === activeCategory;
      const matchesTags = activeTags.length === 0 || activeTags.some(tag => postTags.includes(tag));
      const matchesSearch = searchQuery === '' || 
        postTitle.includes(searchQuery) || 
        postDescription.includes(searchQuery) ||
        postTags.some(tag => tag.toLowerCase().includes(searchQuery));

      if (matchesCategory && matchesTags && matchesSearch) {
        item.classList.remove('hidden');
        visibleCount++;
      } else {
        item.classList.add('hidden');
      }
    });

    if (noResults) {
      noResults.classList.toggle('hidden', visibleCount > 0);
    }
  }

  searchInput?.addEventListener('input', (e) => {
    searchQuery = (e.target as HTMLInputElement).value.toLowerCase();
    filterPosts();
  });

  filterBtns.forEach((btn) => {
    btn.addEventListener('click', () => {
      filterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      activeCategory = btn.getAttribute('data-filter') || 'all';
      filterPosts();
    });
  });

  filterTags.forEach((tag) => {
    tag.addEventListener('click', () => {
      const tagValue = tag.getAttribute('data-filter') || '';
      
      if (tag.classList.contains('active')) {
        tag.classList.remove('active');
        activeTags = activeTags.filter(t => t !== tagValue);
      } else {
        tag.classList.add('active');
        activeTags.push(tagValue);
      }
      
      filterPosts();
    });
  });

  document.addEventListener('astro:after-swap', () => {
    searchQuery = '';
    activeCategory = 'all';
    activeTags = [];
  });
</script>
