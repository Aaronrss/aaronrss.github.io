---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.astro';

const skills = {
  backend: ['Java', 'Spring Boot', 'Python', 'Flask', 'Django', 'SQL', 'REST APIs', 'Microservices'],
  cloud: ['Docker', 'Kubernetes', 'AWS', 'Jenkins', 'CI/CD', 'Linux'],
  monitoring: ['Splunk', 'Grafana', 'Prometheus'],
  databases: ['Oracle', 'PostgreSQL', 'MySQL', 'MongoDB', 'Sybase']
};

const experience = [
  {
    title: 'Software Engineer II – Application Delivery',
    company: 'JPMorgan Chase & Co.',
    period: 'Feb 2025 – Jul 2025',
    description: 'Supported and modernized backend services for accounting and post-trade transaction processing across LATAM markets. Maintained Java/Spring Boot services on Kubernetes, led certificate renewal operations, and ensured compliance with financial security standards.'
  },
  {
    title: 'Software Engineer I – Application Delivery',
    company: 'JPMorgan Chase & Co.',
    period: 'Mar 2023 – Jan 2025',
    description: 'Automated regulatory workflows using Pentaho ETL pipelines. Developed SQL queries for transaction lifecycle tracing, executed controlled deployments, and provided L2/L3 application support.'
  },
  {
    title: 'Development Intern – Application Delivery',
    company: 'JPMorgan Chase & Co.',
    period: 'May 2022 – Feb 2023',
    description: 'Led migration of Sybase database (~50 tables, +3M rows) to Oracle. Refactored 30+ Pentaho ETL jobs and developed automation scripts for legacy system compatibility.'
  }
];

const education = [
  {
    degree: 'B.S. in Computer Science and Technology',
    institution: 'Instituto Tecnológico y de Estudios Superiores de Monterrey (ITESM)',
    period: '2019 – 2023'
  },
  {
    degree: 'AWS Certified Cloud Practitioner',
    institution: 'Amazon Web Services',
    period: '2023'
  }
];
---

<BaseLayout title="About Me | Portfolio" description="Learn more about my experience and skills as a software engineer">
  <Hero
    title="About Me"
    subtitle="Software Engineer"
    description="Passionate about building reliable backend systems and sharing technical knowledge."
  />

  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-[1fr_300px] gap-12 items-start">
        <div>
          <div class="flex flex-col md:flex-row gap-8 mb-16 p-8 rounded-2xl bg-[var(--bg-secondary)]">
            <div class="flex-shrink-0 mx-auto md:mx-0">
              <img 
                src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=400&fit=crop" 
                alt="Aaron Rosas" 
                class="w-44 h-44 rounded-2xl object-cover"
              />
            </div>
            <div class="text-center md:text-left">
              <h2 class="text-2xl font-bold text-[var(--text-primary)] mb-4">Hi! I'm Aaron Rosas</h2>
              <p class="text-[var(--text-secondary)] mb-4 leading-relaxed">
                Software Engineer with a B.S. in Computer Science and three years of experience supporting, refactoring, and developing highly regulated, mission-critical backend systems at JPMorgan Chase & Co.
              </p>
              <p class="text-[var(--text-secondary)] mb-6 leading-relaxed">
                My approach blends product-focused engineering with Cloud, DevOps, and Application Delivery practices. I'm passionate about sharing technical knowledge and simplifying complex distributed systems concepts.
              </p>
              <div class="flex gap-4 justify-center md:justify-start flex-wrap">
                <a href="mailto:aaronrosas@proton.me" class="btn btn-primary">Contact Me</a>
                <a href="/portfolio" class="btn btn-secondary">View Projects</a>
              </div>
            </div>
          </div>

          <div class="mb-12">
            <h3 class="text-xl font-bold text-[var(--text-primary)] mb-6 pb-2 border-b-2 border-[var(--border-color)]">Professional Experience</h3>
            <div class="relative pl-8 before:content-[''] before:absolute before:left-0 before:top-0 before:bottom-0 before:w-0.5 before:bg-[var(--border-color)]">
              {experience.map((job) => (
                <div class="relative mb-8">
                  <div class="absolute -left-8 top-1 w-3 h-3 rounded-full bg-[var(--color-primary-500)] -translate-x-[5px]"></div>
                  <div class="flex flex-wrap justify-between items-start gap-2 mb-1">
                    <h4 class="text-base font-semibold text-[var(--text-primary)]">{job.title}</h4>
                    <span class="text-sm font-medium text-[var(--color-primary-500)]">{job.period}</span>
                  </div>
                  <p class="text-sm text-[var(--text-muted)] mb-2">{job.company}</p>
                  <p class="text-sm text-[var(--text-secondary)] leading-relaxed">{job.description}</p>
                </div>
              ))}
            </div>
          </div>

          <div>
            <h3 class="text-xl font-bold text-[var(--text-primary)] mb-6 pb-2 border-b-2 border-[var(--border-color)]">Education & Certifications</h3>
            <div class="flex flex-col gap-6">
              {education.map((edu) => (
                <div class="p-6 rounded-xl bg-[var(--bg-secondary)]">
                  <h4 class="text-base font-semibold text-[var(--text-primary)] mb-1">{edu.degree}</h4>
                  <p class="text-sm text-[var(--text-secondary)] mb-2">{edu.institution}</p>
                  <span class="text-xs font-medium text-[var(--color-primary-500)]">{edu.period}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <aside class="lg:sticky lg:top-20 flex flex-col gap-6">
          <div class="p-6 rounded-2xl bg-[var(--bg-secondary)] border border-[var(--border-color)]">
            <h3 class="text-sm font-semibold text-[var(--text-primary)] uppercase tracking-wide mb-4">Backend & Cloud</h3>
            <div class="flex flex-wrap gap-2">
              {skills.backend.map((skill) => (
                <span class="tag">{skill}</span>
              ))}
            </div>
          </div>

          <div class="p-6 rounded-2xl bg-[var(--bg-secondary)] border border-[var(--border-color)]">
            <h3 class="text-sm font-semibold text-[var(--text-primary)] uppercase tracking-wide mb-4">Cloud & DevOps</h3>
            <div class="flex flex-wrap gap-2">
              {skills.cloud.map((skill) => (
                <span class="tag">{skill}</span>
              ))}
            </div>
          </div>

          <div class="p-6 rounded-2xl bg-[var(--bg-secondary)] border border-[var(--border-color)]">
            <h3 class="text-sm font-semibold text-[var(--text-primary)] uppercase tracking-wide mb-4">Monitoring</h3>
            <div class="flex flex-wrap gap-2">
              {skills.monitoring.map((skill) => (
                <span class="tag">{skill}</span>
              ))}
            </div>
          </div>

          <div class="p-6 rounded-2xl bg-[var(--bg-secondary)] border border-[var(--border-color)]">
            <h3 class="text-sm font-semibold text-[var(--text-primary)] uppercase tracking-wide mb-4">Databases</h3>
            <div class="flex flex-wrap gap-2">
              {skills.databases.map((skill) => (
                <span class="tag">{skill}</span>
              ))}
            </div>
          </div>

          <div class="p-6 rounded-2xl bg-[var(--bg-secondary)] border border-[var(--border-color)]">
            <h3 class="text-sm font-semibold text-[var(--text-primary)] uppercase tracking-wide mb-4">Contact</h3>
            <ul class="space-y-4">
              <li class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[var(--text-muted)] flex-shrink-0">
                  <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                </svg>
                <a href="mailto:aaronrosas@proton.me" class="text-sm text-[var(--text-secondary)] no-underline hover:text-[var(--color-primary-500)] transition-colors break-all">aaronrosas@proton.me</a>
              </li>
              <li class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[var(--text-muted)] flex-shrink-0">
                  <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                  <path d="M9 18c-4.51 2-5-2-7-2"></path>
                </svg>
                <a href="https://github.com/aaronrss" target="_blank" class="text-sm text-[var(--text-secondary)] no-underline hover:text-[var(--color-primary-500)] transition-colors">github.com/aaronrss</a>
              </li>
              <li class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[var(--text-muted)] flex-shrink-0">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                  <rect width="4" height="12" x="2" y="9"></rect>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
                <a href="https://linkedin.com/in/aaronrosas" target="_blank" class="text-sm text-[var(--text-secondary)] no-underline hover:text-[var(--color-primary-500)] transition-colors">linkedin.com/in/aaronrosas</a>
              </li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>
