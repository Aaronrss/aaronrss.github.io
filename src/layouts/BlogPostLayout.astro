---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  frontmatter: CollectionEntry<'blog'>['data'];
}

const { frontmatter } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(frontmatter.pubDate);
---

<BaseLayout title={frontmatter.title} description={frontmatter.description} image={frontmatter.image}>
  <article class="pb-16">
    <header class="py-16 md:py-8 text-center bg-gradient-to-b from-[var(--bg-secondary)] to-[var(--bg-primary)]">
      <div class="container">
        <div class="flex items-center justify-center gap-4 mb-6 text-sm text-[var(--text-muted)]">
          <a 
            href={`/blog?category=${frontmatter.category}`} 
            class="px-3 py-1 rounded-full text-white no-underline font-medium bg-[var(--color-primary-500)] hover:bg-[var(--color-primary-600)] transition-colors"
          >
            {frontmatter.category}
          </a>
          <time datetime={frontmatter.pubDate.toISOString()}>{formattedDate}</time>
        </div>
        <h1 class="text-3xl md:text-4xl font-extrabold text-[var(--text-primary)] max-w-3xl mx-auto mb-4 leading-tight">
          {frontmatter.title}
        </h1>
        <p class="text-lg md:text-xl text-[var(--text-secondary)] max-w-2xl mx-auto mb-6">
          {frontmatter.description}
        </p>
        {frontmatter.tags && frontmatter.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 justify-center">
            {frontmatter.tags.map((tag: string) => (
              <a href={`/blog?tag=${tag}`} class="tag">{tag}</a>
            ))}
          </div>
        )}
      </div>
    </header>
    
    {frontmatter.image && (
      <div class="my-8">
        <div class="container">
          <img 
            src={frontmatter.image} 
            alt={frontmatter.title} 
            class="w-full max-h-[500px] object-cover rounded-2xl"
          />
        </div>
      </div>
    )}

    <div class="container max-w-3xl">
      <div class="prose">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>
