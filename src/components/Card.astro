---
interface Props {
  title: string;
  description: string;
  href?: string;
  image?: string;
  date?: Date;
  tags?: string[];
  category?: string;
  type?: 'blog' | 'portfolio';
  technologies?: string[];
  github?: string;
  demo?: string;
}

const {
  title,
  description,
  href,
  image,
  date,
  tags = [],
  category,
  type = 'blog',
  technologies = [],
  github,
  demo
} = Astro.props;

const formattedDate = date ? new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(date) : null;
---

<article class="card flex flex-col h-full" data-category={category} data-tags={tags.join(',')}>
  {image && (
    <div class="relative aspect-video overflow-hidden group">
      <img 
        src={image} 
        alt={title} 
        loading="lazy" 
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
      {category && (
        <span class="absolute top-4 left-4 px-3 py-1 text-xs font-medium text-white rounded-full bg-[var(--color-primary-500)]">
          {category}
        </span>
      )}
    </div>
  )}
  
  <div class="flex flex-col flex-1 p-6">
    {formattedDate && (
      <time class="text-xs text-[var(--text-muted)] mb-2">{formattedDate}</time>
    )}
    
    <h3 class="text-xl font-bold text-[var(--text-primary)] mb-3 leading-snug">
      {href ? (
        <a href={href} class="text-inherit no-underline transition-colors duration-200 hover:text-[var(--color-primary-500)]">
          {title}
        </a>
      ) : (
        title
      )}
    </h3>
    
    <p class="flex-1 text-sm text-[var(--text-secondary)] leading-relaxed mb-4 line-clamp-3">
      {description}
    </p>
    
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-auto">
        {tags.slice(0, 3).map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}

    {technologies.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {technologies.map((tech) => (
          <span class="px-2 py-1 text-xs font-medium rounded bg-[var(--bg-tertiary)] text-[var(--color-primary-600)] dark:text-[var(--color-primary-400)]">
            {tech}
          </span>
        ))}
      </div>
    )}

    {(github || demo) && (
      <div class="flex gap-4 mt-auto pt-4 border-t border-[var(--border-color)]">
        {github && (
          <a 
            href={github} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center gap-2 text-sm font-medium text-[var(--text-secondary)] no-underline transition-colors duration-200 hover:text-[var(--color-primary-500)]"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
            GitHub
          </a>
        )}
        {demo && (
          <a 
            href={demo} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center gap-2 text-sm font-medium text-[var(--text-secondary)] no-underline transition-colors duration-200 hover:text-[var(--color-primary-500)]"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" x2="21" y1="14" y2="3"></line>
            </svg>
            Demo
          </a>
        )}
      </div>
    )}
  </div>
</article>
