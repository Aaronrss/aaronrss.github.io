---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: "GitHub", href: "https://github.com/aaronrss", icon: "github" },
  { name: "LinkedIn", href: "https://linkedin.com/in/aaronrosas", icon: "linkedin" },
  { name: "Twitter", href: "https://twitter.com/rnrssr", icon: "twitter" },
];

const footerLinks = [
  { label: "Home", href: "/" },
  { label: "Blog", href: "/blog" },
  { label: "Portfolio", href: "/portfolio" },
  { label: "About", href: "/about" },
  { label: "RSS Feed", href: "/rss.xml" },
];
---

<footer class="bg-[var(--bg-secondary)] border-t border-[var(--border-color)] pt-16 pb-8 mt-16">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-[2fr_1fr_1fr] gap-8 md:gap-12 mb-12">
      <div class="max-w-xs md:max-w-none text-center md:text-left">
        <a href="/" class="text-2xl font-bold no-underline bg-gradient-to-br from-[var(--color-primary-500)] to-[var(--color-accent-500)] bg-clip-text text-transparent">
          Aaron Rosas
        </a>
        <p class="mt-4 text-sm text-[var(--text-secondary)] leading-relaxed">
          Software Engineer based in CDMX, MÃ©xico. Passionate about backend
          development, cloud technologies, distributed systems, and developer
          experience.
        </p>
      </div>

      <div class="text-center md:text-left">
        <h4 class="text-sm font-semibold text-[var(--text-primary)] uppercase tracking-wide mb-4">Links</h4>
        <ul class="list-none p-0 m-0 space-y-2">
          {footerLinks.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-sm text-[var(--text-secondary)] no-underline transition-colors duration-200 hover:text-[var(--color-primary-500)]"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="text-center md:text-left">
        <h4 class="text-sm font-semibold text-[var(--text-primary)] uppercase tracking-wide mb-4">Follow Me</h4>
        <div class="flex gap-3 justify-center md:justify-start">
          <a
            href={socialLinks[0].href}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center w-10 h-10 rounded-lg bg-[var(--bg-tertiary)] text-[var(--text-secondary)] transition-all duration-200 hover:bg-[var(--color-primary-500)] hover:text-white hover:-translate-y-0.5"
            aria-label="GitHub"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
          </a>
          <a
            href={socialLinks[1].href}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center w-10 h-10 rounded-lg bg-[var(--bg-tertiary)] text-[var(--text-secondary)] transition-all duration-200 hover:bg-[var(--color-primary-500)] hover:text-white hover:-translate-y-0.5"
            aria-label="LinkedIn"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect width="4" height="12" x="2" y="9"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <a
            href={socialLinks[2].href}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center w-10 h-10 rounded-lg bg-[var(--bg-tertiary)] text-[var(--text-secondary)] transition-all duration-200 hover:bg-[var(--color-primary-500)] hover:text-white hover:-translate-y-0.5"
            aria-label="Twitter"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <div class="pt-8 border-t border-[var(--border-color)] text-center text-sm text-[var(--text-muted)]">
      <p>&copy; {currentYear} Aaron Rosas. All rights reserved.</p>
    </div>
  </div>
</footer>
