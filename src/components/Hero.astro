---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  showCTA?: boolean;
  ctaText?: string;
  ctaLink?: string;
  secondaryCTA?: string;
  secondaryCTALink?: string;
}

const {
  title,
  subtitle,
  description,
  showCTA = false,
  ctaText = "View Portfolio",
  ctaLink = "/portfolio",
  secondaryCTA = "Read Blog",
  secondaryCTALink = "/blog",
} = Astro.props;
---

<section class="py-24 md:py-16 text-center bg-gradient-to-b from-[var(--bg-secondary)] to-[var(--bg-primary)]">
  <div class="container">
    <div class="max-w-3xl mx-auto">
      {subtitle && (
        <p class="inline-block px-4 py-2 mb-6 text-sm font-medium rounded-full bg-[var(--bg-tertiary)] text-[var(--color-primary-500)]">
          {subtitle}
        </p>
      )}
      <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-6 bg-gradient-to-br from-[var(--text-primary)] to-[var(--color-primary-500)] bg-clip-text text-transparent">
        {title}
      </h1>
      {description && (
        <p class="text-lg md:text-xl text-[var(--text-secondary)] leading-relaxed mb-10">
          {description}
        </p>
      )}
      {showCTA && (
        <div class="flex gap-4 justify-center flex-wrap md:flex-row flex-col items-center">
          <a href={ctaLink} class="btn btn-primary w-full md:w-auto max-w-[280px]">
            {ctaText}
          </a>
          <a href={secondaryCTALink} class="btn btn-secondary w-full md:w-auto max-w-[280px]">
            {secondaryCTA}
          </a>
        </div>
      )}
    </div>
  </div>
</section>
